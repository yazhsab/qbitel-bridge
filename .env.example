# QBITEL Bridge - Environment Configuration
# Copy this file to .env and customize for your environment
# Usage: cp .env.example .env

# =============================================================================
# ENVIRONMENT
# =============================================================================
QBITEL_ENV=development
DEBUG=true

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=qbitel_bridge_dev
DATABASE_USER=qbitel
DATABASE_PASSWORD=qbitel_dev_password

# =============================================================================
# CACHE (Redis)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# SECURITY (Change these in production!)
# =============================================================================
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRY_MINUTES=480
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters
API_KEY_ENABLED=false

# =============================================================================
# TLS/SSL
# =============================================================================
TLS_ENABLED=false
TLS_CERT_FILE=/etc/qbitel_bridge/certs/server.crt
TLS_KEY_FILE=/etc/qbitel_bridge/certs/server.key
TLS_CA_FILE=/etc/qbitel_bridge/certs/ca.crt

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Primary provider: ollama, anthropic, openai
QBITEL_LLM_PROVIDER=ollama
QBITEL_LLM_ENDPOINT=http://localhost:11434
QBITEL_LLM_MODEL=llama3.2:8b
QBITEL_AIRGAPPED_MODE=false

# Cloud LLM API Keys (optional, for fallback)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_API_KEY=

# =============================================================================
# AI ENGINE
# =============================================================================
AI_MODEL_CACHE_DIR=/tmp/qbitel_bridge_models
AI_USE_GPU=true
AI_BATCH_SIZE=32

# =============================================================================
# PERFORMANCE
# =============================================================================
CACHE_SIZE=10000
USE_REDIS_CACHE=false
MAX_THREADS=0

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/qbitel_bridge/app.log

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=8000
METRICS_ENABLED=true
# SENTRY_DSN=

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
NOTIFICATIONS_ENABLED=false
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SLACK_BOT_TOKEN=xoxb-xxx
# SLACK_DEFAULT_CHANNEL=#alerts
# PAGERDUTY_ROUTING_KEY=xxx
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# EMAIL_FROM=qbitel-bridge@example.com

# =============================================================================
# SIEM INTEGRATION (Optional)
# =============================================================================
AUDIT_LOG_TO_FILE=true
AUDIT_LOG_TO_SIEM=false
# SIEM_TYPE=splunk  # splunk, elastic, qradar
# SPLUNK_HEC_URL=https://splunk.example.com:8088/services/collector
# SPLUNK_HEC_TOKEN=
# ELASTIC_URL=https://elastic.example.com:9200
# ELASTIC_API_KEY=
# QRADAR_HOST=
# QRADAR_PORT=514

# =============================================================================
# MARKETPLACE (Optional)
# =============================================================================
MARKETPLACE_ENABLED=false
# STRIPE_API_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=qbitel-bridge-marketplace

# =============================================================================
# VIRUS SCANNING (Optional)
# =============================================================================
STRICT_VIRUS_SCANNING=false
# CLAMAV_SOCKET=/var/run/clamav/clamd.sock

# =============================================================================
# SECRETS MANAGER (Optional)
# =============================================================================
# VAULT_ADDR=
# VAULT_TOKEN=