# CRONOS AI Protocol Discovery - Environment Variables
# Copy this file to .env and set appropriate values

# Environment Configuration
CRONOS_ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cronos_ai
DATABASE_USER=cronos_user
DATABASE_PASSWORD=your_database_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Security Configuration (Required for Production)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
API_KEY_ENABLED=false
TLS_ENABLED=false
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# TLS/SSL Certificate Paths (Required if TLS_ENABLED=true)
TLS_CERT_FILE=/etc/cronos_ai/certs/server.crt
TLS_KEY_FILE=/etc/cronos_ai/certs/server.key
TLS_CA_FILE=/etc/cronos_ai/certs/ca.crt

# CORS Configuration (Required for Production)
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://app.example.com,https://dashboard.example.com

# Monitoring Configuration
PROMETHEUS_PORT=8000
METRICS_ENABLED=true

# AI Engine Configuration
AI_MODEL_CACHE_DIR=/tmp/cronos_ai_models
AI_USE_GPU=true
AI_BATCH_SIZE=32

# Performance Configuration
CACHE_SIZE=10000
USE_REDIS_CACHE=false
MAX_THREADS=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/cronos_ai/app.log

# LLM Provider Configuration (Optional - for Protocol Copilot features)
LLM_PROVIDER=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_API_KEY=

# Secrets Manager Configuration (Optional but Recommended for Production)
VAULT_ADDR=
VAULT_TOKEN=