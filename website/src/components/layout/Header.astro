---
import { mainNavigation } from '@/data/navigation';

const currentPath = Astro.url.pathname;
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <nav class="flex h-16 items-center justify-between" aria-label="Main navigation">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group" aria-label="QBITEL Bridge Home">
        <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-gradient-to-br from-quantum-500 to-neon-cyan text-white font-bold text-sm">
          Q
        </div>
        <span class="text-lg font-bold text-white group-hover:text-quantum-400 transition-colors">
          QBITEL <span class="text-quantum-400">Bridge</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {mainNavigation.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class={`px-3 py-2 text-sm font-medium rounded-lg transition-colors ${
                currentPath.startsWith(item.href) && item.href !== '/'
                  ? 'text-quantum-400'
                  : 'text-gray-300 hover:text-white hover:bg-surface-700/50'
              }`}
            >
              {item.label}
              {item.children && (
                <svg class="inline-block ml-1 w-3 h-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>

            {item.children && (
              <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="glass rounded-xl p-4 min-w-[320px] shadow-2xl shadow-black/50 animate-slide-down">
                  <div class="grid gap-1">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="flex items-start gap-3 p-2 rounded-lg hover:bg-surface-700/50 transition-colors group/item"
                      >
                        <div class="flex-1">
                          <div class="text-sm font-medium text-white group-hover/item:text-quantum-400 transition-colors">
                            {child.label}
                          </div>
                          {child.description && (
                            <div class="text-xs text-gray-400 mt-0.5">{child.description}</div>
                          )}
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Right side -->
      <div class="flex items-center gap-3">
        <a
          href="https://github.com/yazhsab/qbitel-bridge"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium text-gray-300 border border-surface-600 hover:border-quantum-500/50 hover:text-white transition-all"
          aria-label="View on GitHub"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 rounded-lg text-gray-300 hover:text-white hover:bg-surface-700 transition-colors"
          aria-label="Open menu"
          aria-expanded="false"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden lg:hidden glass border-t border-surface-600">
    <div class="mx-auto max-w-7xl px-4 py-4 space-y-1">
      {mainNavigation.map((item) => (
        <div>
          <a
            href={item.href}
            class={`block px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
              currentPath.startsWith(item.href) && item.href !== '/'
                ? 'text-quantum-400 bg-quantum-500/10'
                : 'text-gray-300 hover:text-white hover:bg-surface-700'
            }`}
          >
            {item.label}
          </a>
          {item.children && (
            <div class="ml-4 mt-1 space-y-1">
              {item.children.slice(0, 6).map((child) => (
                <a
                  href={child.href}
                  class="block px-3 py-1.5 rounded-lg text-xs text-gray-400 hover:text-white hover:bg-surface-700 transition-colors"
                >
                  {child.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <div class="pt-2 border-t border-surface-600">
        <a
          href="https://github.com/yazhsab/qbitel-bridge"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm text-gray-300 hover:text-white hover:bg-surface-700 transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View on GitHub
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.getElementById('site-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      header?.classList.add('bg-surface-900/80', 'backdrop-blur-xl', 'border-b', 'border-surface-600/50');
    } else {
      header?.classList.remove('bg-surface-900/80', 'backdrop-blur-xl', 'border-b', 'border-surface-600/50');
    }
  });

  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
