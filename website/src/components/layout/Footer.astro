---
import { footerNavigation } from '@/data/navigation';
import { url } from '@/utils/url';
---

<footer class="border-t border-surface-600/50 bg-surface-950">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Main footer -->
    <div class="py-12 lg:py-16">
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8">
        <!-- Brand -->
        <div class="col-span-2 md:col-span-4 lg:col-span-1 mb-4 lg:mb-0">
          <a href={url('/')} class="flex items-center gap-2.5 mb-4">
            <img src={url('/logo.png')} alt="QBITEL Bridge" class="h-9 w-auto" />
            <span class="text-lg font-bold text-white">
              QBITEL <span class="text-quantum-400">Bridge</span>
            </span>
          </a>
          <p class="text-sm text-gray-400 max-w-xs mb-2">
            Enterprise-grade open-source platform for AI-powered quantum-safe legacy modernization.
          </p>
          <p class="text-xs text-gray-500 max-w-xs mb-4">
            Apache 2.0 licensed. No open-core. Production-ready.
          </p>
          <div class="flex items-center gap-3">
            <a href="https://github.com/yazhsab/qbitel-bridge" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors" aria-label="GitHub">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            </a>
          </div>
        </div>

        <!-- Products -->
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">Products</h3>
          <ul class="space-y-2">
            {footerNavigation.products.map((item) => (
              <li>
                <a href={url(item.href)} class="text-sm text-gray-400 hover:text-quantum-400 transition-colors">{item.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Resources -->
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">Resources</h3>
          <ul class="space-y-2">
            {footerNavigation.resources.map((item) => (
              <li>
                <a href={url(item.href)} class="text-sm text-gray-400 hover:text-quantum-400 transition-colors">{item.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Community -->
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">Community</h3>
          <ul class="space-y-2">
            {footerNavigation.community.map((item) => (
              <li>
                <a href={item.href.startsWith('http') ? item.href : url(item.href)} class="text-sm text-gray-400 hover:text-quantum-400 transition-colors" {...(item.href.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : {})}>{item.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company -->
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">Company</h3>
          <ul class="space-y-2">
            {footerNavigation.company.map((item) => (
              <li>
                <a href={item.href.startsWith('http') ? item.href : url(item.href)} class="text-sm text-gray-400 hover:text-quantum-400 transition-colors" {...(item.href.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : {})}>{item.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-surface-600/50 py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-gray-500">
        &copy; {new Date().getFullYear()} QBITEL Contributors. Enterprise-grade open source. Licensed under Apache 2.0.
      </p>
      <div class="flex items-center gap-4">
        <span class="badge">
          <svg class="w-3 h-3 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          Quantum-Safe
        </span>
        <span class="badge">
          NIST Level 5
        </span>
        <span class="badge">
          Apache 2.0
        </span>
      </div>
    </div>
  </div>
</footer>
