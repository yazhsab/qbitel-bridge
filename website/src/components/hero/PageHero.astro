---
interface Props {
  title: string;
  description: string;
  badge?: string;
  gradient?: string;
}

const { title, description, badge, gradient = 'from-quantum-500 to-neon-cyan' } = Astro.props;
---

<section class="relative overflow-hidden border-b border-surface-600/50">
  <div class="absolute inset-0 bg-surface-900" />
  <div class="absolute inset-0 bg-grid-pattern bg-grid opacity-20" />
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-quantum-500/50 to-transparent" />

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    {badge && (
      <div class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r ${gradient} bg-opacity-10 text-white mb-4`}>
        {badge}
      </div>
    )}
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-white mb-4 max-w-3xl">{title}</h1>
    <p class="text-lg text-gray-400 max-w-2xl">{description}</p>
  </div>
</section>
