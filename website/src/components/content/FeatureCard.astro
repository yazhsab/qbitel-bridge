---
import { url } from '@/utils/url';

interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  badge?: string;
}

const { title, description, icon, href, badge } = Astro.props;
---

<a href={url(href)} class="card p-6 group block">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-quantum-500/10 border border-quantum-500/20 flex items-center justify-center group-hover:bg-quantum-500/20 transition-colors">
      <svg class="w-5 h-5 text-quantum-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d={icon} />
      </svg>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <h3 class="text-base font-semibold text-white group-hover:text-quantum-400 transition-colors">{title}</h3>
        {badge && (
          <span class="badge text-[10px]">{badge}</span>
        )}
      </div>
      <p class="text-sm text-gray-400 leading-relaxed">{description}</p>
    </div>
  </div>
</a>
