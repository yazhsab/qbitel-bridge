---
import { heroStats } from '@/data/stats';

interface Props {
  stats?: typeof heroStats;
}

const { stats = heroStats } = Astro.props;
---

<section class="relative border-y border-surface-600/50 bg-surface-800/50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 lg:gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold gradient-text">{stat.value}</div>
          <div class="text-sm font-medium text-white mt-1">{stat.label}</div>
          {stat.description && (
            <div class="text-xs text-gray-500 mt-0.5">{stat.description}</div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
