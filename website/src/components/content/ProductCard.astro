---
import { url } from '@/utils/url';

interface Props {
  title: string;
  tagline: string;
  description: string;
  href: string;
  color: string;
  features: string[];
  metrics?: { label: string; value: string }[];
}

const { title, tagline, description, href, color, features, metrics } = Astro.props;
---

<a href={url(href)} class="card p-6 group block">
  <div class={`inline-flex px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r ${color} text-white mb-3`}>
    {tagline}
  </div>
  <h3 class="text-xl font-bold text-white group-hover:text-quantum-400 transition-colors mb-2">{title}</h3>
  <p class="text-sm text-gray-400 mb-4 leading-relaxed">{description}</p>

  {metrics && metrics.length > 0 && (
    <div class="grid grid-cols-3 gap-3 mb-4 p-3 rounded-lg bg-surface-900/50 border border-surface-600/50">
      {metrics.map((m) => (
        <div class="text-center">
          <div class="text-sm font-bold text-quantum-400">{m.value}</div>
          <div class="text-[10px] text-gray-500">{m.label}</div>
        </div>
      ))}
    </div>
  )}

  <ul class="space-y-1.5">
    {features.map((feature) => (
      <li class="flex items-center gap-2 text-sm text-gray-400">
        <svg class="w-4 h-4 text-neon-green flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        {feature}
      </li>
    ))}
  </ul>
</a>
