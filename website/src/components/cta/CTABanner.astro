---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Ready to Modernize Your Legacy Infrastructure?',
  description = 'Deploy QBITEL Bridge in minutes. Enterprise-grade open source. Apache 2.0 licensed. Free forever.',
} = Astro.props;
---

<section class="relative py-16 lg:py-24 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-quantum-900/50 via-surface-900 to-quantum-900/50" />
  <div class="absolute inset-0 bg-grid-pattern bg-grid opacity-20" />
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-quantum-500/50 to-transparent" />
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-quantum-500/50 to-transparent" />

  <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{title}</h2>
    <p class="text-lg text-gray-400 mb-8 max-w-2xl mx-auto">{description}</p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href="/docs/getting-started/quickstart" class="btn-primary text-base">
        Quick Start Guide
        <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a href="https://github.com/yazhsab/qbitel-bridge" target="_blank" rel="noopener noreferrer" class="btn-secondary text-base">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Star on GitHub
      </a>
      <a href="/enterprise" class="btn-secondary text-base">
        Enterprise Support
      </a>
    </div>
  </div>
</section>
