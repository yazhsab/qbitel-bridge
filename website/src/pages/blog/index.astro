---
import PageLayout from '@/layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<PageLayout title="Blog - QBITEL Bridge" description="Insights on quantum-safe security, AI-powered protocol discovery, and legacy system modernization.">
  <section class="mx-auto max-w-5xl px-4 sm:px-6 py-16 lg:py-24">
    <header class="mb-12 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Blog</h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        Insights on quantum-safe security, AI-powered protocol discovery, and legacy system modernization.
      </p>
      <div class="glow-line mt-8 max-w-xs mx-auto"></div>
    </header>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="card group p-6 flex flex-col">
          <div class="flex flex-wrap gap-2 mb-3">
            {post.data.tags.map((tag: string) => (
              <span class="badge text-[0.7rem]">{tag}</span>
            ))}
          </div>
          <h2 class="text-xl font-semibold text-white mb-2 group-hover:text-quantum-400 transition-colors">
            {post.data.title}
          </h2>
          <p class="text-gray-400 text-sm leading-relaxed flex-1">
            {post.data.description}
          </p>
          <div class="mt-4 pt-4 border-t border-surface-600 flex items-center justify-between text-xs text-gray-500">
            <time datetime={post.data.date}>
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            <span>{post.data.author}</span>
          </div>
        </a>
      ))}
    </div>

    {posts.length === 0 && (
      <p class="text-center text-gray-500 py-12">No posts yet. Check back soon.</p>
    )}
  </section>
</PageLayout>
