# EditorConfig - https://editorconfig.org
root = true

# Default for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Rust
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Go
[*.go]
indent_style = tab
indent_size = 4

# JavaScript / TypeScript / React
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS / SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML
[*.toml]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile (tabs required)
[Makefile]
indent_style = tab
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 4

# Protocol Buffers
[*.proto]
indent_style = space
indent_size = 2

# COBOL
[*.{cbl,cob,cpy}]
indent_style = space
indent_size = 4
max_line_length = 80

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf
